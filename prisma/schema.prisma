generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TransactionStatus {
  pending
  capture
  settlement
  deny
  cancel
  expire
}

enum OrderProgress {
  waitingCheckout
  waitingPayment
  confirmOrder
  onProgress
  deny
  finished
}

model Auth {
  id       String @unique @default(cuid())
  userId   String @unique
  user     User   @relation(fields: [userId], references: [id])
  password String
  email    String @unique
}

model User {
  id       String  @unique @default(cuid())
  username String
  phoneNum String?
  Auth     Auth?
  Order    Order[]
}

model Order {
  id            String         @unique @default(cuid())
  sheetCount    Int?
  paperType     String?
  finishing     String?
  quantity      Int?
  printType     String?
  inkType       String?
  totalPrice    Int?
  status        OrderProgress?
  paymentStatus Boolean?
  documentPath  String
  documentName  String
  userId        String
  orderDate     DateTime       @default(now())
  user          User           @relation(fields: [userId], references: [id])
  Payment       Payment[]
}

model Payment {
  id                String            @unique @default(cuid())
  transactionId     String
  orderId           String
  order             Order             @relation(fields: [orderId], references: [id])
  grossAmount       String
  paymentType       String
  transactionTime   DateTime
  expiryTime        DateTime
  vaNumber          String
  bank              String
  transactionStatus TransactionStatus
}

model DailyPrintSummary {
  id             String   @unique @default(cuid())
  date           DateTime @unique @db.Date
  totalSheets    Int      @default(0)
  isWeekend      Int      @default(0)
  isHoliday      Int      @default(0)
  isPeakAcademic Int      @default(0)
  createdAt      DateTime @default(now())
}

model PaperGsmPrice {
  id                  String               @unique @default(cuid())
  gsm                 String
  price               Int
  createdAt           DateTime             @default(now())
  updateAt            DateTime             @default(now())
  printSpesifications PrintSpesification[]
}

model FinishingOption {
  id                  String               @unique @default(cuid())
  finishingType       String
  price               Int
  createdAt           DateTime             @default(now())
  updateAt            DateTime             @default(now())
  printSpesifications PrintSpesification[]
}

model PrintingType {
  id                  String               @unique @default(cuid())
  printingType        String
  price               Int
  createdAt           DateTime             @default(now())
  updateAt            DateTime             @default(now())
  printSpesifications PrintSpesification[]
}

model InkType {
  id                  String               @unique @default(cuid())
  InkType             String
  price               Int
  createdAt           DateTime             @default(now())
  updateAt            DateTime             @default(now())
  printSpesifications PrintSpesification[]
}

model PrintSpesification {
  id                String          @unique @default(cuid())
  inkType           InkType         @relation(fields: [inkTypeId], references: [id])
  printingType      PrintingType    @relation(fields: [printingTypeId], references: [id])
  finishingOption   FinishingOption @relation(fields: [finishingOptionId], references: [id])
  paperGsm          PaperGsmPrice   @relation(fields: [paperGsmPriceId], references: [id])
  inkTypeId         String
  printingTypeId    String
  finishingOptionId String
  paperGsmPriceId   String
}
